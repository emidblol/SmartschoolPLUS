{
  "manifest_version": 2,
  "name": "Smartschool +",
  "version": "2.1",
  "description": "Makes smartschool nicer.",
  "icons": {
    "48": "icons/s+.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.smartschool.be/*"
      ],
      "js": [
        "scripts/icons.js"
      ]
    },
    {
      "matches": [
        "*://*.smartschool.be/*"
      ],
      "js": [
        "scripts/plannerpicturepreview.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://*.smartschool.be/*"
  ],
  "web_accessible_resources": [
    "icons/s+.svg",
    "icons/home.svg",
    "icons/go-up.png",
    "icons/courses.png",
    "icons/mail.png",
    "icons/notification.png",
    "icons/bell.png",
    "icons/active.png",
    "icons/search.png",
    "html/settings.html",
    "scripts/plannerpicturepreview.js"
  ],
  "options_ui": {
    "page": "html/settings.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{6ed3f146-2aae-4c4e-b92b-b1ebed983bb8}"
    }
  }
}